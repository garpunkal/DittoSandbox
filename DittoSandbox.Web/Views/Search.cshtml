@inherits DittoView<SearchViewModel>
@{
    Layout = "~/Views/Shared/Master.cshtml";
}

<div class="propertyType">
    @if (Model.View.HasSearchTerm)
    {
        if (Model.View.PagedResults.Any())
        {
            @Html.Partial("~/Views/Partials/Search/Results.cshtml", Model.View)
        }
        else
        {
            @Html.Partial("~/Views/Partials/Search/Form.cshtml", Model.View)
            @Html.Partial("~/Views/Partials/Search/NoResults.cshtml", Model.View)
        }
    }
    else
    {
        @Html.Partial("~/Views/Partials/Search/Form.cshtml", Model.View)
    }
</div>