@model SearchViewModel
@if (Model.TotalPages > 1)
{
    <div class="search-pager">
        <p>
            @if (Model.CurrentPage > 1)
            {
                <a class="prev" href="?query=@(Model.SearchTerm)&page=@(Model.CurrentPage - 1)">@Model.PreviousLabel</a>
            }
            else
            {
                <span class="prev">@Model.PreviousLabel</span>
            }

            @for (var i = 1; i <= Model.TotalPages; i++)
            {
                if (i == Model.CurrentPage)
                {
                    <span class="page">@i</span>
                }
                else
                {
                    <a class="page" href="?query=@(Model.SearchTerm)&page=@(i)">@i</a>
                }
            }

            @if (Model.CurrentPage < Model.TotalPages)
            {
                <a class="next" href="?query=@(Model.SearchTerm)&page=@(Model.CurrentPage + 1)">@Model.NextLabel</a>
            }
            else
            {
                <span class="next">@Model.NextLabel</span>
            }
        </p>
    </div>
}