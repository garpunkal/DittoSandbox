@inherits DittoView<NewsItem>
@{
    Layout = "~/Views/Shared/Master.cshtml";
}

<div class="propertyType">
    <h2>Media Picker</h2>
    <a href="@Model.View.Image.Url" target="_blank"><img src="@Model.View.Image.Url?width=300&height=300&mode=crop" alt="@Model.View.Image.Url" /></a>
</div>

<div class="propertyType">
    <h2>Richtext Editor</h2>

    <p>@Model.View.BodyText</p>
</div>

<div class="propertyType">
    <h2>Multi Media Picker</h2>
    @foreach (var image in Model.View.Images)
    {
        <a href="@image.Url" target="_blank"><img src="@image.Url?width=300&height=300&mode=crop" alt="@image.Title" /></a>
    }
</div>

<div class="propertyType">
    <h2>Tags</h2>
    @if (Model.View.Tags != null)
    {
        <ul>
            @foreach (var tag in Model.View.Tags)
            {
                <li>@tag</li>
            }
        </ul>
    }
</div>

<div class="propertyType">
    <h2>File Upload</h2>
    @if (Model.View.Attachment != null)
    {
        <p><a href="@Model.View.Attachment">@Model.View.Attachment</a></p>
    }
</div>

<div class="propertyType">
    <h2>Content Picker</h2>

    @if (Model.View.PromotedPage != null)
    {
        <a href="@Model.View.PromotedPage.Url">@Model.View.PromotedPage.Title</a>
    }
</div>
